void zigZagOrder(BinaryTreeNode<int> *root) {
  if(root==NULL)
    return;
  
  stack<BinaryTreeNode<int>*> currentstack,nextstack;
  
  currentstack.push(root);
  bool ltr=true;
  
  while(!currentstack.empty())
  {
    BinaryTreeNode<int> *s=currentstack.top();
    currentstack.pop();
    cout<<s->data<<" ";
    if(ltr)
    {
      if(s->left)
      nextstack.push(s->left);
      if(s->right)
      nextstack.push(s->right);
    }
    else
    {
      if(s->right)
      nextstack.push(s->right);
      if(s->left)
      nextstack.push(s->left);
       
    }
    
    if(currentstack.empty()==true)
    {
      ltr=!ltr;
      currentstack.swap(nextstack);
      cout<<"\n";
    }
  }
  
